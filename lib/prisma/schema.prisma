generator client {
  provider = "prisma-client-js"
  previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Forum {
  id String @id @unique
  config String @unique
  collection String?
  totalCapacity BigInt
  Posts Post[] @relation("ForumToPost")
}

model Post {
  id String @id @unique
  author String
  title String
  body String?
  url String?
  createdAt BigInt
  editedAt BigInt?
  nonce BigInt
  votes BigInt @default(0)
  forum String
  Forum Forum @relation("ForumToPost", fields: [forum], references: [id])
  Comments Comment[] @relation("PostToComment")
}

model Comment {
  id String @id @unique
  author String
  body String
  createdAt BigInt
  editedAt BigInt?
  nonce BigInt
  votes BigInt @default(0)
  post String
  Post Post @relation("PostToComment", fields: [post], references: [id])
  parent String?
  Parent Comment? @relation("CommentToParent", fields: [parent], references: [id])
  Children Comment[] @relation("CommentToParent")
}